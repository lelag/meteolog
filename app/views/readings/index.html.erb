<h1>Listing readings</h1>

<table>
  <tr>
    <th>Read at</th>
    <th>Station</th>
    <th>Temperature</th>
    <th>Weather</th>
    <th>Wind direction</th>
    <th>Wind strength</th>
    <th>Pressure</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @readings.each do |reading| %>
  <tr>
    <td><%= reading.read_at %></td>
    <td><%= reading.station %></td>
    <td><%= reading.temperature %></td>
    <td><%= reading.weather %></td>
    <td><%= reading.wind_direction %></td>
    <td><%= reading.wind_strength %></td>
    <td><%= reading.pressure %></td>
    <td><%= link_to 'Show', reading %></td>
    <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
    <td><%= link_to 'Destroy', reading, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

